@model IEnumerable<RestaurantDAL.TransactionTable>

@{
    ViewBag.Title = "ViewTransactions";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<head>
    <meta name="viewport" content="width=device-width" />


</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div style="margin-left:50px;margin-right:50px; margin-top:50px">
            <div class="jumbotron well" style="background-color:white; font-size:smaller">
                <div class="table-responsive">



                    <h2 align="center">All Transactions</h2>

                    <table class="table table-hover" border="1" cellpadding="2" cellspacing="2">
                        <thead>
                            <tr>
                                <th scope="col">Transaction From</th>

                                <th scope="col">Transaction To</th>

                                <th scope="col">Amount</th>
                                <th scope="col">Type</th>
                                <th scope="col">Time</th>
                                <th scope="col">Transaction</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>
                                        @item.Trans_From
                                    </td>


                                    <td>
                                        @item.Trans_To
                                    </td>

                                    <td>
                                        @item.Trans_Amount
                                    </td>
                                    <td>
                                        @item.Trans_Type
                                    </td>
                                    <td>
                                        @item.Trans_Time
                                    </td>
                                    <td>
                                        @Html.ActionLink("Transaction", "ViewTransaction", new { transId = item.Trans_Id }, new { @class = "btn btn-danger btn-md" })
                                    </td>
                                </tr>

                            }

                    </table>




                </div>
            </div>
        </div>
    }
</body>








