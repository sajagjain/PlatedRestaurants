@model RestaurantDAL.Restaurant
@{
    ViewBag.Title = "RestCreate";
}

<style>
    .control-label{
        width:250px;
    }

</style>

<img class="image-responsive" src="~/ImagesFolder/yellowbackground.jpg" style="width:100%;position:relative" />
<div class="container" style="margin-top:-250px">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12" style="margin-top:-100px">
            <div class="" style="background-color:white;border-radius:0px;-webkit-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);padding:30px;">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @*<div class="form-horizontal">
                        <h4>Registration</h4>
                        <hr />*@
                    @*<div style="margin-left:250px;margin-right:250px; margin-top:50px;">*@
                    @*<div class=" well" style="background-color:white;">*@
                    <center>
                        <h2>Restaurant Registration</h2>
                    </center>
                    <br /><br />
                    <div style="text-align:left; ">

                        <div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Res_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Res_Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @pattern = "[[a-zA-Z]+[ ][a-zA-Z]+]{3,30}", @required = "required", @title = "Member Name only contains alphabet(at least 3 alphabet and max 30 )" } })
                                        @Html.ValidationMessageFor(model => model.Res_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <br /><br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Res_Address, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Res_Address, new { htmlAttributes = new { @class = "form-control", @type = "text", @pattern = "[[a-zA-Z,-()0-9/]+[ ][a-zA-Z]+]{10,20}", @required = "required", @title = "Please Enter the correct Address" } })
                                        @Html.ValidationMessageFor(model => model.Res_Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br /><br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Res_City, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Res_City, new { htmlAttributes = new { @class = "form-control", @type = "text", @pattern = "[A-Za-z]{6,15}", @required = "required", @title = "Please Enter the correct City" } })
                                        @Html.ValidationMessageFor(model => model.Res_City, "", new { @class = "text-danger" })


                                    </div>
                                </div>

                                <br /><br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Res_Capacity, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Res_Capacity, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "10", @max = "500" , @required = "required"} })
                                        @Html.ValidationMessageFor(model => model.Res_Capacity, "", new { @class = "text-danger" })


                                    </div>
                                </div>

                                <br /><br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Res_No_Of_Tables, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Res_No_Of_Tables, new { htmlAttributes = new { @class = "form-control", @min = "5", @max = "150" } })
                                        @Html.ValidationMessageFor(model => model.Res_No_Of_Tables, "", new { @class = "text-danger" })


                                    </div>
                                </div>

                                <br /><br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Owner_Name, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Owner_Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @pattern = "^[a-zA-Z ]{2,30}$", @required = "required", @title = "Owner Name only contains alphabet(at least 3 alphabet and max 30 )" } })
                                        @Html.ValidationMessageFor(model => model.Owner_Name, "", new { @class = "text-danger" })


                                    </div>
                                </div>

                                <br /><br />



                                <div class="form-group">
                                    @Html.LabelFor(model => model.Owner_MobileNo, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Owner_MobileNo, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "6000000000", @max = "9999999999", @pattern = "[0-9]", @required = "required", @title = "Please Enter the correct Mobile Number" } })
                                        @Html.ValidationMessageFor(model => model.Owner_MobileNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br /><br />


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Owner_Email, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Owner_Email, new { htmlAttributes = new { @class = "form-control" , @type = "email", @pattern = "[a-z0-9@.]{6,50}", @required = "required", @title = "Please Enter the Correct Email" } })
                                        @Html.ValidationMessageFor(model => model.Owner_Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br /><br />


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @pattern = "[A-Za-z0-9@#$%^&*_]{6,20}", @required = "required", @title = "Please Enter the Correct Password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <br /><br />
                                
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input class="btn btn-md btn-danger" style="margin-top:20px" type="submit" value="Submit">

                                    </div>
                                </div>

                            </div>
                            </div>
                        
                        }

                        


                        <br /><br />
                            <hr/>
                              
                              <div style="margin-top:70px;">
                                  <span class="title">User Exist?</span>
                                  @Html.ActionLink("Click Here For login", "login")

                              </div>
                                  <div class="row">
                                      <div class="column large-6 medium-8 font-size-small color-light margin-bottom-medium">
                                          By selecting "Register" you agree to the terms and conditions of the
                                          @Html.ActionLink("Plated User Agreement", "UserAgreement", "Home") and
                                          @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home").
                                      </div>
                                  </div>
                              
                    </div>
             
                        </div>

                       



               </div>
          </div>
   

 



