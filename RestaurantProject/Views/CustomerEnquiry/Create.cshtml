@model RestaurantDAL.Enquiry
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}



<img class="image-responsive" src="~/ImagesFolder/enquiry_background.jpg" style="width:100%;position:relative" />
<div class="container" style="margin-top:-250px">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12" style="margin-top:-100px">
            <div class="" style="background-color:white;border-radius:0px;-webkit-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);padding:30px;">

                @using (Html.BeginForm("Create", "CustomerEnquiry",new { resId=Model.Res_Id},FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Enquiry <span class="text-danger">Form</span></h2>
                    <h5>*You can ask anything in enquiry form related to services provided by the restaurant.</h5>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone_No, "Phone No", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Phone_No, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Enquiry_Desc, "Enquiry Text", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Enquiry_Desc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Enquiry_Desc, "" +
        "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-danger" style="margin-top:20px;" value="Post Enquiry" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
