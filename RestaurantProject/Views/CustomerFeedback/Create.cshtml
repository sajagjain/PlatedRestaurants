@model RestaurantDAL.Feedback
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}


</style>

<div class="container">
    
    @using (Html.BeginForm("Create", "CustomerFeedback",new { resId=Model.Res_Id}, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <h2>Feedback <span class="text-danger">Form</span></h2>
        <h5>* Share how you feel about this restaurant, write a feedback</h5>    
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email Id", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Feedback1, "Feedback Text", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Feedback1, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Feedback1, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="btn btn-danger" value="Post Feedback" />
            </div>
        </div>
    }
</div>



