@model IEnumerable<RestaurantDAL.Feedback>
@{
    ViewBag.Title = "ShowFeedback";
    Layout = "~/Views/Shared/_Layout_Restaurant.cshtml";
}

<head>

    <meta name="viewport" content="width=device-width" />


    <style>
        .jumbotron{
            background-color:white;
        }
    </style>
</head>


<div class="container" style="margin-top:100px">
    <div class="row">
        

        @if (Model.ToList().Count() > 0)
        {
        <table class="table table-responsive table-bordered table-hover " style="background-color:white">

            <thead>
                <tr>
                    <th colspan="3"><h2 align="center">Feedback</h2></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Feedback</th>
                    <th>Email</th>

                    @*<th></th>*@
                    <th>Delete</th>




                </tr>
                @foreach (var item in Model)
        {
            <tr>


                <td>@item.Feedback1</td>
                <td>@item.Email</td>


                @*<td>@Html.ActionLink("Edit", "Edit", "RestaurantOwnerEvent", new { id = item.En_id }, null)</td>*@
                <td>@Html.ActionLink("Delete", "Delete", "RestaurantOwnerFeedback", new { id = item.FID }, null)</td>

            </tr>
}
                <tr>
                    <td colspan="3" align="center">@Html.ActionLink("Back To Home", "Index", "RestaurantMain")</td>
                </tr>
            <tbody>
        </table>

        }
        else {
            
            <div class="jumbotron well">
                No Feedbacks Available
            </div>
        
        }</div>

    </div>



