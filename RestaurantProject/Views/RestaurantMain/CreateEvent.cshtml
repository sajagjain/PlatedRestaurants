@model RestaurantDAL.Event

@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/Shared/_Layout_Restaurant.cshtml";
}


<img class="image-responsive" src="~/ImagesFolder/enquiry_background.jpg" style="width:100%;position:relative" />
<div class="container" style="margin-top:-250px">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12" style="margin-top:-100px">
            <div class="" style="background-color:white;border-radius:0px;-webkit-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);padding:30px;">

                @using (Html.BeginForm("CreateEvent", "RestaurantMain", new { resId = Model.Res_Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Create <span class="text-danger">Event</span></h2>
                    <h5>*You can ask anything in enquiry form related to services provided by the restaurant.</h5>
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Event_Name, "Event name", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Event_Name, new { @class = "form-control", @required = "required",@title="Enter Event Name" })
                            @Html.ValidationMessageFor(model => model.Event_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Event_Description, "Event Text", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Event_Description, new { @class = "form-control", @required = "required",@type="Text" ,@title="Enter Event Description"})
                            @Html.ValidationMessageFor(model => model.Event_Description, "" + "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Event_date, "Event Date", new { @class = "col-md-2 control-label",@type="date",@required="required",@pattern= "([12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]))", @title="Enter Event Date"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Event_date, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Event_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.event_time, "Event Time", new { @class = "col-md-2 control-label",@required="required" ,@pattern= "/^[0-2][0-3]:[0-5][0-9]/g", @title="Enter Event Time"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.event_time, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.event_time, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-danger" style="margin-top:20px;" value="CreateEvent" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

