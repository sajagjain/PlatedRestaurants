@model RestaurantDAL.Offer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<img class="image-responsive" src="~/ImagesFolder/enquiry_background.jpg" style="width:100%;position:relative" />
<div class="container" style="margin-top:-250px">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12" style="margin-top:-100px">
            <div class="" style="background-color:white;border-radius:0px;-webkit-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);
box-shadow: 0px 7px 47px -1px rgba(0,0,0,0.75);padding:30px;">

                @using (Html.BeginForm("Create", "RestaurantMain", new { resId = Model.Res_Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
            @Html.AntiForgeryToken()
            <h2>Enquiry <span class="text-danger">Form</span></h2>
            <h5>*You can ask anything in enquiry form related to services provided by the restaurant.</h5>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Offer_name, "Offer Name", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Offer_name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Offer_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Offer_Desc, "Offer Text", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Offer_Desc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Offer_Desc, "" +
"", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.offer_valid_from, "Offer Valid From", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.offer_valid_from, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.offer_valid_from, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Offer_Valid_To, "Offer Valid To", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Offer_Valid_To, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Offer_Valid_To, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-danger" style="margin-top:20px;" value="Post Offer" />
                </div>
            </div>
}

            </div>
        </div>
    </div>
</div>

